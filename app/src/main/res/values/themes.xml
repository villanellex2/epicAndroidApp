<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.EpicAndroidApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EpicAndroidApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EpicAndroidApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EpicAndroidApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ColorSwitchStyle" parent="Text.Main">
        <item name="android:focusable">false</item>
    </style>

    <style name="ColorSwitchStyle.Active">
        <item name="colorControlActivated">@color/blue_200</item>
        <item name="colorSwitchThumbNormal">@color/blue_100</item>
        <item name="android:colorForeground">@color/blue_700</item>
    </style>

    <style name="ColorSwitchStyle.Stub">
        <item name="colorControlActivated">#bbbbbb</item>
        <item name="colorSwitchThumbNormal">#bbbbbb</item>
        <item name="android:colorForeground">#888888</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorHint">@color/text_color_tertiary</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginEnd">10sp</item>
    </style>

    <style name="Text.JSON">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Label">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.SettingsTitle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Main">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical|end</item>

    </style>

    <style name="Field">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>